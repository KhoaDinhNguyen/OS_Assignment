{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build my project",
            "type": "shell",
            "command": "make",
            // Assuming "all" is your default Make target
            // Remove "args" if "all" is your target, or replace "all" with your desired target
            "args": [
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Assuming your Makefile is in the root, adjust if necessary
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        }
    ]
}